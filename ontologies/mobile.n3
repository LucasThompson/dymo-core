@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix mo: <http://purl.org/ontology/mo/> .
@prefix mt: <http://purl.org/ontology/studio/multitrack#> .
@prefix dy: <http://tiny.cc/dymo-ontology#> .
@prefix mb: <http://tiny.cc/mobile-audio-ontology#> .


mb:
	a owl:Ontology ;
	rdfs:comment "An ontology for describing playback rendering features on mobile devices" .

mb:Rendering
	a owl:Class ;
	rdfs:subClassOf mt:MultitrackProject ;
	rdfs:comment "" .

mb:Mapping
	a owl:Class ;
	rdfs:comment "" . #make restriction to one dimension

mb:ProductMapping
	a owl:Class ;
	rdfs:subClassOf mb:Mapping ;
	rdfs:comment "Mapping that multiplies its dimensions" .

mb:SumMapping
	a owl:Class ;
	rdfs:subClassOf mb:Mapping ;
	rdfs:comment "Mapping that adds its dimensions" .

mb:MappingDimension
	a owl:Class ;
	rdfs:comment "" .

mb:Function
	a owl:Class .

mb:LinearFunction
	a owl:Class ;
	rdfs:subClassOf mb:Function .

mb:SymmetricalFunction
	a owl:Class ;
	rdfs:subClassOf mb:Function .

mb:TriangleFunction
	a owl:Class ;
	rdfs:subClassOf mb:SymmetricalFunction .

mb:RectangleFunction
	a owl:Class ;
	rdfs:subClassOf mb:SymmetricalFunction .

mb:InterpolationFunction
	a owl:Class ;
	rdfs:subClassOf mb:Function .

mb:MobileControl 
	a owl:Class ;
	rdfs:comment "" .

mb:CustomControl
	a owl:Class ;
	rdfs:subClassOf mb:MobileControl ;
	rdfs:comment "" .


#Sensor Controls

mb:SensorControl 
	a owl:Class ;
	rdfs:subClassOf mb:MobileControl ;
	rdfs:comment "" .

mb:AccelerometerX
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .
	
mb:AccelerometerY
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:AccelerometerZ
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:TiltX
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .
	
mb:TiltY
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:GeolocationLatitude
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:GeolocationLongitude
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:GeolocationDistance
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

mb:CompassHeading
	a owl:Class ;
	rdfs:subClassOf mb:SensorControl ;
	rdfs:comment "" .

#UI Controls

mb:UIControl
	a owl:Class ;
	rdfs:subClassOf mb:MobileControl ;
	rdfs:comment "" .

mb:Slider
	a owl:Class ;
	rdfs:subClassOf mb:UIControl ;
	rdfs:comment "" .

mb:Toggle
	a owl:Class ;
	rdfs:subClassOf mb:UIControl ;
	rdfs:comment "" .

mb:Button
	a owl:Class ;
	rdfs:subClassOf mb:UIControl ;
	rdfs:comment "" .

#Autonomous Controls

mb:AutoControl
	a owl:Class ;
	rdfs:subClassOf mb:MobileControl ;
	rdfs:comment "" .

mb:Random
	a owl:Class ;
	rdfs:subClassOf mb:AutoControl ;
	rdfs:comment "" .

mb:GraphControl
	a owl:Class ;
	rdfs:subClassOf mb:AutoControl ;
	rdfs:comment "" .


#Global and control parameters

mb:MobileParameter
	a owl:Class ;
	rdfs:subClassOf mt:AutomationParameter ;
	rdfs:comment "" .

mb:GlobalParameter
	a owl:Class ;
	rdfs:subClassOf mb:MobileParameter ;
	rdfs:comment "" .

mb:ListenerOrientation
	a mb:GlobalParameter ;
	rdfs:comment "" .

mb:ControlParameter
	a owl:Class ;
	rdfs:subClassOf mb:MobileParameter ;
	rdfs:comment "" .

mb:StatsFrequency
	a mb:ControlParameter ;
	rdfs:comment "" .

mb:LeapingProbability
	a mb:ControlParameter ;
	rdfs:comment "" .

mb:ContinueAfterLeaping
	a mb:ControlParameter ;
	rdfs:comment "" .


#PROPERTIES

#Rendering properties

mb:hasDymo
	a owl:ObjectProperty, owl:FunctionalProperty ;
	rdfs:domain mb:Rendering ; 
	rdfs:range dy:Dymo ;
	rdfs:comment "" .

mb:hasMapping
	a owl:ObjectProperty ;
	rdfs:domain mb:Rendering ; 
	rdfs:range mb:Mapping ;
	rdfs:comment "" .

#Mapping properties

mb:hasDimension
	a owl:ObjectProperty ;
	rdfs:domain mb:Mapping ; 
	rdfs:range mb:MappingDimension ;
	rdfs:comment "" .

mb:fromControl
	a owl:ObjectProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range mb:MobileControl ;
	rdfs:comment "" .

mb:fromFeature
	a owl:ObjectProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range dy:Feature ;
	rdfs:comment "" .

mb:hasFunction
	a owl:ObjectProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range mb:Function ;
	rdfs:comment "" .

mb:toDymo
	a owl:ObjectProperty ;
	rdfs:domain mb:Mapping ;
	rdfs:range dy:Dymo ;
	rdfs:comment "" .

mb:toParameter
	a owl:ObjectProperty ;
	rdfs:domain mb:Mapping ;
	rdfs:range dy:Parameter ;
	rdfs:comment "" .

mb:toMobileParameter
	a owl:ObjectProperty ;
	rdfs:domain mb:Mapping ;
	rdfs:range mb:MobileParameter ;
	rdfs:comment "" .

mb:hasMultiplier
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

mb:hasAddend
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

mb:hasModulus
	a owl:DatatypeProperty, owl:FunctionalProperty ;
	rdfs:domain mb:MappingDimension ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

#Function properties

mb:hasPosition
	a owl:DatatypeProperty ;
	rdfs:domain mb:SymmetricalFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

mb:hasRange
	a owl:DatatypeProperty ;
	rdfs:domain mb:SymmetricalFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .

mb:hasPoint
	a owl:DatatypeProperty ;
	rdfs:domain mb:InterpolationFunction ;
	rdfs:range xsd:decimal ;
	rdfs:comment "" .
